<% if obj.errors.any? %>
    <div class='errors'>
        <div class='card-content'>
            <h2 class='panel-title'>
                <%= pluralize(obj.errors.count, 'error')%>
            </h2>
        </div>
        <div class='card-action'>
            <ul>
                <% obj.errors.full_messages.each { |msg| %>
                    <li> <%= msg %> </li>
                <% } %>
            </ul>
        </div>
    </div>
<% end%>